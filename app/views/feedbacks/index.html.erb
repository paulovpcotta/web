<p id="notice"><%= notice %></p>

<h1>Listing Feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>Quantity stars</th>
      <th>Source feedback</th>
      <th>User</th>
      <th>User opnion</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.quantity_stars %></td>
        <td><%= feedback.source_feedback_id %></td>
        <td><%= feedback.user_id %></td>
        <td><%= feedback.user_opnion %></td>
        <td><%= feedback.active %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

