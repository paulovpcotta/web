<table>
  <thead>
  <tr>
    <th>Category</th>
    <th>Service</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @professional.professional_services.each do |ps| %>
      <tr>
        <td><%= ps.service.category.id %></td>
        <td><%= ps.service.id %></td>
        <td><%= ps.price %></td>
        <td><%= link_to 'Show', ps %></td>
        <td><%= link_to 'Edit' %></td>
        <td><%= link_to 'Destroy', ps, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "Add Service", professionals_new_professional_services_path, remote: true, class: "btn btn-primary" %>
