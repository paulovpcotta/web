<div class="main-container">
  <div class="container">
    <div class="row">
      <%= bootstrap_flash %>
      <div class=" col-lg-8">
      <div class="panel panel-default ">
        <div class="panel-heading">
          <h4 class="panel-title"><%= t('professionals.new_part2.title')%> <span class="pull-left"> <i class="icon-briefcase"></i></span>  </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse in">
          <div class="panel-body">


              <div id="form_professional_services" >
                <%= render 'professional_services_fields' %>
              </div>
              <div id="new_professional_service">
                <%= render 'professional_services_form' , locals: {services: @services}  %>
              </div>



          </div>
        </div>

      </div>
      <div class="panel panel-default ">
        <div class="panel-heading">
          <h4 class="panel-title"> <%= t('professionals.new_part2.images_title')%> <span class="pull-left"> <i class="icon-camera-2"></i></span> </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse in">
          <div class="panel-body">
            <%= bootstrap_form_for @professional_profession,:url => url_for(:controller => 'professionals', :action => 'create_professional_profession'),:method =>'post' , html: { multipart: true } do |f| %>
                <%= f.hidden_field :id %>
                <%= f.hidden_field :professional_id %>
                <%= f.hidden_field :profession_id %>
                <%= f.hidden_field :description %>


                <%= f.fields_for :professional_profession_images do |img| %>

                    <%= img.file_field :photo, class:'fileuploadservice'%>

                <% end %>

                <div class="form-group" style="margin-bottom:0">
                  <div class="text-right">
                    <%= f.submit t('.final_button'),  class:"btn btn-success btn-lg"%>
                  </div>
                </div>

            <% end %>
          </div>
        </div>
      </div>
      </div>
      <!-- /.page-content -->


    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</div>
<script src="/js/fileinput.min.js" type="text/javascript"></script>
<script>
  // initialize with defaults
  $(".fileuploadservice").fileinput({'showUpload':false, 'previewFileType':'image', browseLabel:'Procurar...',removeLabel:'Remover'});
</script>
<!-- /.main-container -->
